{
  "name": "mcpaystream-backend",
  "version": "1.0.0",
  "description": "MCPayStream Backend - Blockchain-powered payment tracking for content creators",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "lint": "eslint src/",
    "build": "echo 'No build step required for Node.js'",
    "init-db": "./init-db.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "db:seed": "node src/scripts/initCreator.js",
    "test:devnet:keypair": "node ./test/generate-keypair.mjs",
    "test:devnet:install": "./test/devnet-cli.sh install",
    "test:devnet:use": "./test/devnet-cli.sh use",
    "test:devnet:airdrop": "node ./test/airdrop.mjs",
    "test:devnet:send": "node ./test/send.mjs",
    "test:devnet:address": "node -e \"import('node:fs');import('node:path');import('node:os');import {Keypair} from '@solana/web3.js';const fs=require('fs');const os=require('os');const path=require('path');const p=(process.env.SOLANA_WALLET_KEYPAIR||path.join(os.homedir(),'.config/solana/mcpaystream.json')).replace(/^~\//,os.homedir()+'/');const s=JSON.parse(fs.readFileSync(p,'utf8'));const kp=Keypair.fromSecretKey(new Uint8Array(s));console.log(kp.publicKey.toBase58());\"",
    "test:devnet:balance": "node -e \"import{Connection,PublicKey,LAMPORTS_PER_SOL}from'@solana/web3.js';(async()=>{const a=process.argv[1];const c=new Connection(process.env.SOLANA_NETWORK||'https://api.devnet.solana.com','confirmed');const bal=await c.getBalance(new PublicKey(a));console.log((bal/LAMPORTS_PER_SOL).toFixed(4)+' SOL')})().catch(e=>{console.error(e.message);process.exit(1)})\""
  },
  "keywords": [
    "solana",
    "blockchain",
    "payments",
    "content-creators",
    "prisma",
    "postgresql",
    "supabase"
  ],
  "author": "MCPayStream Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "@solana/web3.js": "^1.91.0",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
